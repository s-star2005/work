/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
 int ans;
 int dfs(TreeNode* now)
        {
            if(now==NULL)
            {
                return 0;
            }
            int l=dfs(now->left);
            int r=dfs(now->right);
            int sum=now->val+max({l,r,0});//当前点作为根的子节点时的最大贡献为当前点值+左节点或右节点中的一个或者一个都不选
            ans=max(now->val+max(l,0)+max(r,0),ans);//当前点作为根节点时，若子节点的贡献小于0则不选，其他情况都选
            return sum;
        }
class Solution {
public:
    int maxPathSum(TreeNode* root) {
        ans=-1000000;
        dfs(root);
        return ans;
    }
};